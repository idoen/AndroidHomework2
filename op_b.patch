+    override fun onViewCreated(view: View, savedInstanceState: Bundle?) {
+        mapContainer = view.findViewById(R.id.mapContainer)
+        markerView = view.findViewById(R.id.mapMarker)
+        locationText = view.findViewById(R.id.mapLocationText)
+    }
+
+    fun showLocation(score: HighScore) {
+        locationText?.text = getString(
+            R.string.high_score_location,
+            score.latitude,
+            score.longitude
+        )
+
+        val container = mapContainer ?: return
+        val marker = markerView ?: return
+
+        val horizontalBias = normalize(score.longitude, -180.0, 180.0)
+        val verticalBias = 1f - normalize(score.latitude, -90.0, 90.0)
+
+        val set = ConstraintSet()
+        set.clone(container)
+        set.setHorizontalBias(marker.id, horizontalBias)
+        set.setVerticalBias(marker.id, verticalBias)
+        set.applyTo(container)
+    }
+
+    private fun normalize(value: Double, minValue: Double, maxValue: Double): Float {
+        if (maxValue <= minValue) return 0.5f
+        val ratio = ((value - minValue) / (maxValue - minValue)).toFloat()
+        return min(1f, max(0f, ratio))
+    }
+}
