+package com.example.obstacles.data
+
+import android.content.Context
+
+class HighScoreRepository(context: Context) {
+    private val prefs = context.getSharedPreferences(PREFS_NAME, Context.MODE_PRIVATE)
+
+    fun getTopScores(): List<HighScore> {
+        val raw = prefs.getString(KEY_SCORES, null)
+        if (raw.isNullOrBlank()) {
+            val seed = seedScores()
+            saveScores(seed)
+            return seed
+        }
+        return parseScores(raw)
+    }
+
+    fun saveScores(scores: List<HighScore>) {
+        val normalized = scores.sortedByDescending { it.points }.take(MAX_SCORES)
+        prefs.edit().putString(KEY_SCORES, serializeScores(normalized)).apply()
+    }
+
+    private fun seedScores(): List<HighScore> {
+        val now = System.currentTimeMillis()
+        val samples = listOf(
+            HighScore(points = 960, latitude = 32.0853, longitude = 34.7818, timestamp = now - 86_400_000L),
+            HighScore(points = 910, latitude = 31.7683, longitude = 35.2137, timestamp = now - 64_800_000L),
+            HighScore(points = 880, latitude = 32.7940, longitude = 34.9896, timestamp = now - 43_200_000L),
+            HighScore(points = 830, latitude = 31.2529, longitude = 34.7915, timestamp = now - 36_000_000L),
+            HighScore(points = 800, latitude = 29.5577, longitude = 34.9519, timestamp = now - 28_800_000L),
+            HighScore(points = 770, latitude = 32.6996, longitude = 35.3035, timestamp = now - 21_600_000L),
+            HighScore(points = 740, latitude = 32.3215, longitude = 34.8532, timestamp = now - 18_000_000L),
+            HighScore(points = 710, latitude = 31.0461, longitude = 34.8516, timestamp = now - 14_400_000L),
+            HighScore(points = 680, latitude = 32.0171, longitude = 34.7454, timestamp = now - 10_800_000L),
+            HighScore(points = 650, latitude = 32.0853, longitude = 34.7818, timestamp = now - 7_200_000L)
+        )
+        return samples.sortedByDescending { it.points }.take(MAX_SCORES)
+    }
+
+    private fun serializeScores(scores: List<HighScore>): String {
+        return scores.joinToString(";") { score ->
+            listOf(score.points, score.latitude, score.longitude, score.timestamp).joinToString(",")
+        }
+    }
+
+    private fun parseScores(raw: String): List<HighScore> {
+        if (raw.isBlank()) return emptyList()
+        return raw.split(";")
+            .mapNotNull { token ->
+                val parts = token.split(",")
+                if (parts.size != 4) return@mapNotNull null
+                val points = parts[0].toIntOrNull() ?: return@mapNotNull null
+                val lat = parts[1].toDoubleOrNull() ?: return@mapNotNull null
+                val lon = parts[2].toDoubleOrNull() ?: return@mapNotNull null
+                val timestamp = parts[3].toLongOrNull() ?: return@mapNotNull null
+                HighScore(points = points, latitude = lat, longitude = lon, timestamp = timestamp)
+            }
+            .sortedByDescending { it.points }
+            .take(MAX_SCORES)
+    }
+
+    companion object {
+        private const val PREFS_NAME = "high_scores"
+        private const val KEY_SCORES = "scores"
+        private const val MAX_SCORES = 10
+    }
+}
